# .env.tmpl.example - Template for environment variables
# Copy to .env and fill in values. DO NOT commit .env to version control.

# --- JWT Secrets (Generate strong random secrets) ---
# Used to sign and verify authentication tokens.
JWT_AUTH_SECRET={{.JWTAuthSecret}}

# Used to sign and verify email verification tokens.
JWT_VERIFICATION_EMAIL_SECRET={{.JWTVerificationSecret}}

# Used to sign and verify password reset tokens.
JWT_PASSWORD_RESET_SECRET={{.JWTPasswordResetSecret}}

# Used to sign and verify email change confirmation tokens.
JWT_EMAIL_CHANGE_SECRET={{.JWTEmailChangeSecret}}

# --- SMTP Configuration ---
SMTP_USERNAME=
SMTP_PASSWORD=
# SMTP_FROM_ADDRESS=

# --- OAuth2 Providers ---
OAUTH2_GOOGLE_CLIENT_ID=
OAUTH2_GOOGLE_CLIENT_SECRET=

OAUTH2_GITHUB_CLIENT_ID=
OAUTH2_GITHUB_CLIENT_SECRET=

# --- ACME Configuration ---
ACME_CLOUDFLARE_API_TOKEN=
ACME_LETSENCRYPT_PRIVATE_KEY=
